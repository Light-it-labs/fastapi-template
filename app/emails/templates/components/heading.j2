{% set _styles = {
    "1": "font-size: 28px; margin-bottom: 32px;",
    "2": "font-size: 22px; margin-bottom: 24px;",
    "3": "font-size: 18px; margin-bottom: 16px;",
} %}
{% set _base_style = "text-align: center; color: #4b19e1;" %}

{% macro _style(level) %}
    "{{ _styles[level] }} {{ _base_style }}"
{% endmacro %}

{% macro heading(level="2", attributes="") %}
    <h{{ level }} style={{ _style(level) }} {{ attributes }}>
        {{ caller() }}
    </h{{ level }}>
{% endmacro %}
